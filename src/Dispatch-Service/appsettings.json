{
  "Grpc": {
    "TaxiServiceAddress": "http://taxi-service"
  },
  "DistanceOptions": {
    "EarthRadiusMeters": 6371000
  },
  "DriverSnapshotOptions": {
    "SnapshotTtl": "00:00:30"
  },
  "Postgres": {
    "Host": "localhost",
    "Port": 5800,
    "Database": "postgres",
    "Username": "postgres",
    "Password": "postgres",
    "SslMode": "Prefer"
  },
  "MessagePersistence": {
    "SchemaName": "message_persistence",
    "Publisher": {
      "Default": {
        "BatchSize": 10,
        "PollingDelay": "00:00:00.500"
      }
    }
  },
  "Kafka": {
    "Host": "localhost:8001",
    "Producers": {
      "DispatchMessage": {
        "Topic": "ride_assignation",
        "Outbox": {
          "BatchSize": 100,
          "PollingDelay": "00:00:00.500"
        }
      }
    },
    "Consumers": {
      "RideRequestedMessage": {
        "IsDisabled": false,
        "Topic": "ride_requested",
        "Group": "Dispatch-Service",
        "Inbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      },
      "TaxiDriverStatusChangedMessage": {
        "IsDisabled": false,
        "Topic": "taxi_driver_status_changed",
        "Group": "Dispatch-Service",
        "Inbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      },
      "TaxiDriverVehicleChangedMessage": {
        "IsDisabled": false,
        "Topic": "taxi_vehicle_changed",
        "Group": "Dispatch-Service",
        "Inbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      }
    }
  }
}